extends ../node_modules/pug-bootstrap/_bootstrap.pug

block body
  #wrap
    nav.navbar.navbar-default
      .container-fluid
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#')
            img.navar-brand-logo(alt='Brand', src='http://maba-online.nl/socialcoin/logosocialcoin.png')
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='/saldoOpvragen') Saldo
              li
                a(href='#') Taken
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/') Home
            li
              a(href='/gemeente') Gemeente
            li.active
              a(href='/schuldhebbende') Schuldhebbende
            span.sr-only (current)
            li
              form(method='post', action='/')
                button.uitloggenknop(type='submit')
                  a.uitloggenknoplink Uitloggen

    .container.theme-showcase(role='main')
      // Main jumbotron for a primary marketing message or call to action
      .page-header
        h1
          | SocialCoin | Saldo opvragen
      .row
        .col-md-6
          if walletaddress != null
            ul.list-group
              li.list-group-item
                span
                strong
                  |     Wallet
                i
                  |     #{walletaddress}
                li.list-group-item
                  span
                  strong
                    |     Saldo
                  i
                    |     SC #{quantity}



              //P Wallet #{walletaddress} <b> bevat #{quantity} #{asset}
              //P Wallet #{percentage} <b> bevat #{quantity} #{asset}
        .col-md-6
          .circle-wrapper
            .svg.svg1.col-md-6.col-sm-6(data-value=''+ parseInt(percentage) +'', data-lang='Afgelost')
              svg(width='250px', height='250px', viewbox='0 0 80 80')
                path.load-bg.cir1(d='M40,10C57.351,10,71,23.649,71,40.5S57.351,71,40.5,71 S10,57.351,10,40.5S23.649,10,40.5,10z')
                path#load-line1.load-circle(style='stroke-dashoffset: 192.6168975830078px; stroke-dasharray: 192.6168975830078px;', d='M40,10C57.351,10,71,23.649,71,40.5S57.351,71,40.5,71 S10,57.351,10,40.5S23.649,10,40.5,10z')
          //else
            P  #{err}






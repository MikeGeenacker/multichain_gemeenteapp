block body
  #wrap
    nav.navbar.navbar-default
      .container-fluid
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#')
            img.navar-brand-logo(alt='Brand', src='http://maba-online.nl/socialcoin/logosocialcoin.png')
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='/')
                | Home
                span.sr-only (current)
            li.dropdown
              a.dropdown-toggle(href='streams', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                | Stream
                span.caret
              ul.dropdown-menu
                li
                  a(href='/createStream') Stream aanmaken
                li
                  a(href='/stream') Streams bekijken
            li.dropdown
              a.dropdown-toggle(href='streams', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                | Taken
                span.caret
              ul.dropdown-menu
                li
                  a(href='#') Taak aanmaken
                li
                  a(href='#') Taken bekijken

    .container.theme-showcase(role='main')
      // Main jumbotron for a primary marketing message or call to action
      .page-header

extends ../node_modules/pug-bootstrap/_bootstrap.pug

block body
    #wrap
        nav.navbar.navbar-default
            .container-fluid
                // Brand and toggle get grouped for better mobile display
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='#')
                        img.navar-brand-logo(alt='Brand', src='http://maba-online.nl/socialcoin/logosocialcoin.png')
                // Collect the nav links, forms, and other content for toggling
                #bs-example-navbar-collapse-1.collapse.navbar-collapse
                    ul.nav.navbar-nav
                        li.dropdown.active
                            a.dropdown-toggle(href='streams', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                                | Stream
                                span.caret
                            ul.dropdown-menu
                                li
                                    a(href='/createStream') Stream aanmaken
                                li.active
                                    a(href='/stream') Streams bekijken
                                span.sr-only (current)
                            span.sr-only (current)
                        li.dropdown
                            a.dropdown-toggle(href='streams', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                                | Taken
                                span.caret
                            ul.dropdown-menu
                                li
                                    a(href='#') Taak aanmaken
                                li
                                    a(href='/gemeente/takenBekijken') Taken bekijken
                    ul.nav.navbar-nav.navbar-right
                        li
                            a(href='/') Home
                        li.active
                            a(href='/gemeente') Gemeente
                        span.sr-only (current)
                        li
                            a(href='/schuldhebbende') Schuldhebbende

        .container.theme-showcase(role='main')
            // Main jumbotron for a primary marketing message or call to action
            .page-header
                h1
                    | SocialCoin | Wallets
            .row
                .col-md-7
                    ul.list-group
                    each val in wallets
                        li.list-group-item
                            a(href='/walletDetails?address='+ val.address) #{val.address}
                    else
                        li.list-group-item Er zijn momenteel geen wallets beschikbaar!
